{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "baseUrl": "./",
    "lib": ["es2017"],
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
